@import "bootstrap-sass/assets/stylesheets/bootstrap-sprockets";
@import "bootstrap-sass/assets/stylesheets/bootstrap";

/* Import the fonts */
@font-face {
// Workaround to avoid using rails serve static files setting.
  <% path = 'bootstrap-sass/assets/fonts/bootstrap/' %>
  font-family: 'Glyphicons Halflings';
  src: url(<%= asset_path("#{path}glyphicons-halflings-regular.eot") %>);
  src: url(<%= asset_path("#{path}glyphicons-halflings-regular.eot?#iefix") %>) format('embedded-opentype'),
       url(<%= asset_path("#{path}glyphicons-halflings-regular.woff") %>) format('woff'),
       url(<%= asset_path("#{path}glyphicons-halflings-regular.ttf") %>) format('truetype'),
       url(<%= asset_path("#{path}glyphicons-halflings-regular.svg#glyphicons_halflingsregular") %>) format('svg');
}

.editable-hide {
  display: none;
}

.hover {
  cursor: pointer;
  cursor: hand;
}

.item:hover > .hiden {
  display: block;
}

.item:hover > td > .hiden {
  display: block;
}

.hiden, .hiden-control {
  display: none;
}

.glyphicon-lg {
  @extend .hover;

  font-size: 2.5em;
}

.glyphicon-remove, .glyphicon-retweet, .glyphicon-edit {
  @extend .hover;
}

.media:first-child {
  margin-top: 15px;
}

.table .vcenter {
  vertical-align: middle;
}

.table {
  th, td {
    text-align: center;
  }
}

.table tbody > tr > td {
  vertical-align: middle;
}

tr:hover .hiden-control {
  display: block;
}

p:hover > span.hiden {
  display: inline;
}

.score-input {
  padding-right: 5px;
  padding-left: 5px;
}

.score-submit {
  padding: 0px;
}

.select-changed {
  box-shadow: 0 0 10px green;
}

.scale:hover {
  transform: scale(1.5);
}

#rankings tr td:last-child {
  min-width: 30px;
}

.match {
  min-width: 200px;
  border: solid 1px;
  margin-top: 10px;
  margin-bottom: 10px;
}

.matches-container {
}

.matches {
}

.match-row {
  display: inline-flex;
  align-items: center;
  flex-direction: row-reverse;
}

.match-col {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.spacer {
  width: 100px;
}

.grid-container {
  justify-content: center;
}

.grid-header {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
}

.profile-nav {
  margin-bottom: 20px;
}
