form.form-inline#edit_match_form.hidden name="editMatchForm"
  .form-group
    .input-group
      select.form-control.input-lg { name="host_team"
               id="host_team"
               data={ ng_model: "vm.editedMatch.hostTeam.id",
                      ng_options: "team.id as team.name for team in vm.teams" } }
  .form-group
    .input-group
      input.form-control.input-lg data={ ng_model: "vm.editedMatch.hostScore" } /
  .form-group
    .input-group
      input.form-control.input-lg data={ ng_model: "vm.editedMatch.guestScore" } /
  .form-group
    .input-group
      select.form-control.input-lg { name="guest_team"
               id="guest_team"
               data={ ng_model: "vm.editedMatch.guestTeam.id",
                      ng_options: "team.id as team.name for team in vm.teams" } }
  .form-group
    .input-group
      .btn-group
        button.btn.btn-primary.btn-lg type="submit" Update match
        button.btn.btn-default.btn-lg type="cancel" Cancel
